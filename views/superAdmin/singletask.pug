    // begin:: Page
    // begin:: Header Mobile
    #kt_header_mobile.kt-header-mobile.kt-header-mobile--fixed
      .kt-header-mobile__logo
        a(href="index.html")
          img(alt="Logo" src="/assets/media/logos/logo-dark.png")
      .kt-header-mobile__toolbar
        button#kt_aside_mobile_toggler.kt-header-mobile__toggler.kt-header-mobile__toggler--left
          span
        button#kt_header_mobile_toggler.kt-header-mobile__toggler
          span
        button#kt_header_mobile_topbar_toggler.kt-header-mobile__topbar-toggler
          i.flaticon-more
    // end:: Header Mobile
    .kt-grid.kt-grid--hor.kt-grid--root
      .kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--ver.kt-page
        include ./partials/sidenav.pug
        #kt_wrapper.kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--hor.kt-wrapper
          // begin:: Header
          include ./partials/topnav.pug
          #kt_content.kt-content.kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--hor
            // begin:: Content Head
            include ./partials/header.pug
            .kt-grid.kt-grid--ver.kt-grid--root#errortask(style="margin-top:-20%; display:none;")
              .kt-grid__item.kt-grid__item--fluid.kt-grid.kt-error-v5(style='background-image: url(/assets/media/error/bg5.jpg);')
                .kt-error_container
                  span.kt-error_title
                    h1 Oops!
                  p.kt-error_subtitle
                    | Something went wrong here.
                  p.kt-error_description
                    | There is no such task available
            
            .kt-container.kt-container--fluid.kt-grid__item.kt-grid__item--fluid#task_portlet(style="display:none")

              // begin:: Portlet
              .kt-portlet
                .kt-portlet__body
                  .alert.alert-danger#deletedtask(role='alert' style="display:none;") This task is deleted
                  .alert.alert-custom.alert-outline-2x.alert-outline-success.fade.show.mb-5#paymentalert(role='alert' style="display:none;")
                    .alert-icon
                      i.flaticon-warning
                    .alert-text Payment update available! 
                    .alert-text#paymentdetail Paid= 0AUD& Budget= 100AUD
                    button.btn.btn-label-success.btn-bold.btn-sm(style="border-radius:10px;" onclick="paymentstatus(true)") Update
                    .alert-close
                      button.close(type='button' data-dismiss='alert' aria-label='Close')
                        span(aria-hidden='true')
                          i.ki.ki-close
                  .kt-widget.kt-widget--user-profile-3
                    .kt-widget__top
                      .kt-widget__content
                        .kt-widget__head
                          a.kt-widget__title#tasktitle(href='#')
                          a.btn.btn-outline-brand.btn-bold.btn-sm.dropdown-toggle(href='#', data-toggle='dropdown')
                            | Actions
                          .dropdown-menu.dropdown-menu-fit.dropdown-menu-right
                            ul.kt-nav
                              li.kt-nav__head
                                | Task Actions
                              li.kt-nav__separator
                              li.kt-nav__item
                                a.kt-nav__link(data-toggle='modal' data-target='#kt_modal_5')
                                  i.kt-nav__link-icon.flaticon-user-ok
                                  span.kt-nav__link-text Assign
                              li.kt-nav__item
                                a.kt-nav__link(data-toggle='modal' data-target='#kt_modal_6')
                                  i.kt-nav__link-icon.flaticon-piggy-bank
                                  span.kt-nav__link-text Payment
                              li.kt-nav__item
                                a.kt-nav__link(onclick="completetask('unassigned')")
                                  i.kt-nav__link-icon.flaticon-piggy-bank
                                  span.kt-nav__link-text Unassign
                              li.kt-nav__item
                                a.kt-nav__link(onclick="completetask('complete')")
                                  i.kt-nav__link-icon.flaticon-piggy-bank
                                  span.kt-nav__link-text Complete
                              li.kt-nav__item
                                a.kt-nav__link(tyle="button" onclick="completetask('delivered')")
                                  i.kt-nav__link-icon.flaticon-piggy-bank
                                  span.kt-nav__link-text Delivered
                              li.kt-nav__separator
                              li.kt-nav__foot
                                button.btn.btn-label-danger.btn-bold.btn-sm#deletetask Delete
                                a.btn.btn-clean.btn-bold.btn-sm(data-toggle='modal' data-target='#kt_modal_4' onclick="editTaskFill()") Edit
                              // end::Nav
                        .kt-widget__subhead
                          a(href='#')#taskkey
                          a(href='#')#wordcount
                          a(href='#')#timestampscreated
                          a(href='#')#timestampsmodified
                          a(href='#')#clientBdm
                        .kt-widget__subhead
                          a(href='#')#sdeadline
                          a(href='#')#hdeadline
                        .kt-widget__info.row(style="padding-top: 10px;")
                          .kt-widget__desc#taskdesc.col-md-12.kt-scroll(data-scroll="true" style="text-align:justify" data-height="250" )
                    .kt-widget__bottom
                      .kt-widget__item
                        .kt-widget__icon
                          i.flaticon-piggy-bank
                        .kt-widget__details
                          span.kt-widget__title Amount
                          span.kt-widget__value
                            span#budgettask
                      .kt-widget__item
                        .kt-widget__icon
                          i.flaticon-confetti
                        .kt-widget__details
                          span.kt-widget__title Paid
                          span.kt-widget__value
                            span#paidamount
                      .kt-widget__item
                        .kt-widget__icon
                          i.flaticon-chat-1
                        .kt-widget__details
                          span.kt-widget__title Client
                          a.kt-widget__value.kt-font-brand(href='#')#clientname
                      .kt-widget__item
                        .kt-widget__icon
                          i.flaticon-file-2
                        .kt-widget__details
                          span.kt-widget__title Created by
                          a.kt-widget__value.kt-font-brand(href='#')#createdby
                      .kt-widget__item
                        .kt-widget__icon
                          i.flaticon-file-2
                        .kt-widget__details
                          span.kt-widget__title Status
                          span.kt-widget__value
                            span#taskstatus
              // end:: Portlet
              .row#milestonepanel(style="display:none;")
                .col-lg-12.col-xl-12.col-md-12.col-sm-12
                  // begin:: Widgets/Trends
                  .kt-portlet
                    .kt-portlet__head.kt-portlet__head--noborder
                      .kt-portlet__head-label
                        h3.kt-portlet__head-title
                          | Milestones
                      .kt-portlet__head-toolbar
                        button.btn.btn-clean.btn-sm.btn-icon.btn-icon-lg#closemilestone(type='button')
                          i.flaticon.flaticon-cancel
                    .kt-portlet__body
                      .kt-section
                        .kt-section__content
                          button.btn.btn-brand(type='button') Milestone 1
                          button.btn.btn-brand(type='button') Milestone 1
                          button.btn.btn-brand(type='button') Milestone 1
                          button.btn.btn-brand(type='button') Milestone 1
              .row
                .col-lg-6
                  .kt-portlet.kt-margin-top-30#fileupload_portlet
                    .kt-portlet__head
                      .kt-portlet__head-label
                        h3.kt-portlet__head-title
                          | Assessment Brief
                    // begin::Form
                    .kt-form
                      .kt-portlet__body
                        form(class='fileuploadform' enctype='multipart/form-data' role='form')
                          .form-group
                            label File Browser
                            div
                            .custom-file
                              input.custom-file-input(type='file' name='files[]' id='files' multiple)
                              label.custom-file-label(for='customFile') Choose file
                            span.form-text.text-muted Max files size at once is 50MB and max number of files is 5.
                          .kt-form__actions
                            button.btn.btn-primary(type='submit', id='submit', name='submit') Submit
                      .kt-portlet__foot(data-scroll="true" data-height="250")
                        .kt-widget4#briefupload
                    // end::Form
                .col-lg-6
                  .kt-portlet.kt-margin-top-30#solutionupload_portlet
                    .kt-portlet__head
                      .kt-portlet__head-label
                        h3.kt-portlet__head-title
                          | Assessment Solutions
                      .kt-portlet__head-toolbar
                                .dropdown.dropdown-inline
                                  button.btn.btn-clean.btn-sm.btn-icon-md.btn-icon(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                    i.flaticon-more-1
                                  .dropdown-menu.dropdown-menu-right.dropdown-menu-fit.dropdown-menu-md
                                    // begin::Nav
                                    ul.kt-nav
                                      li.kt-nav__item
                                        a.kt-nav__link(href='#', onclick="sendFilesToClient()")
                                          i.kt-nav__link-icon.flaticon-paper-plane-1
                                          span.kt-nav__link-text Send to Client    
                    // begin::Form
                    .kt-form
                      .kt-portlet__body
                        form(class='solutionuploadform' enctype='multipart/form-data' role='form')
                          .form-group
                            label File Browser
                            div
                            .custom-file
                              input.custom-file-input(type='file' name='files1[]' id='files1' multiple)
                              label.custom-file-label(for='customFile') Choose file
                            span.form-text.text-muted Max files size at once is 50MB and max number of files is 5.
                          .kt-form__actions
                            button.btn.btn-primary(type='submit', id='submit1', name='submit1') Submit
                      .kt-portlet__foot(data-scroll="true" data-height="250")
                        .kt-widget4#solutionupload
              .row
                .col-xl-6.col-md-6.col-sm-6
                  // begin:: Widgets/Last Updates
                  .kt-portlet.kt-portlet--height-fluid
                    .kt-portlet__head
                      .kt-portlet__head-label
                        h3.kt-portlet__head-title
                          | Task Logs
                    .kt-portlet__body.kt-scroll(data-scroll="true" data-height="400")
                      // begin::widget 12
                      .kt-widget4
                        .kt-widget4__item#taskcreate
                        br
                      .kt-widget4#tasklogs
                      // end::Widget 12
                    // end:: Widgets/Last Updates
                .col-xl-6.col-md-6.col-sm-6
                  // begin:: Widgets/Notifications
                  .kt-portlet.kt-chat#comment_portlet
                    .kt-portlet__head
                      .kt-portlet__head-label
                        h3.kt-portlet__head-title
                          | Actual Efforts 
                    .kt-portlet__body.kt-scroll(data-scroll="true" data-height="400")
                      .kt-widget3
                        table.table#efforttable
                          thead
                            tr
                              th(scope='col') DoneBy
                              th(scope='col') Efforts
                              th(scope='col') Approved
                          tbody
                    .kt-portlet__foot
                      table.table
                          thead
                            tr
                              th(scope='col') Total wordcount: 3500
                              th(scope='col') Price perword: 1.2 INR
                          tbody

                            
          include ./partials/footer.pug
          // begin::Modal
          #kt_modal_4.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Add a Task
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                  form#createTask
                    .form-group
                      label.form-control-label(for='email') Title:
                      input#title.form-control(type='text' name="title")
                    .form-group
                      label.form-control-label(for='email') Wordcount:
                      input#wordcount.form-control(type='number' name="wordcount")
                    .form-group
                      label.form-control-label(for='jDate') Soft Deadline:
                      input#softdeadline.form-control.empjoindate(type='date' name="softdeadline")
                    .form-group
                      label.form-control-label(for='jDate') Hard Deadline:
                      input#harddeadline.form-control.empjoindate(type='date' name="harddeadline")        
                    .form-group
                      label Description
                      .summernote#textdescription
                    .form-group
                      label Client
                      select#selectclient.custom-select.form-control(name= "selectclient")
                        option(selected='') Select client
                .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal' ) Close
                  button#actionButton.btn.btn-primary(type='button' onclick="createTask()") Create
          // end::Modal
          #kt_modal_5.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Assign Task To
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                  form
                  span#taskAssignId(style="display:none")
                  .form-group
                    label(style="display:block") Select an Employee:
                    select#kt_select2_1.form-control.kt-select2.getteam(name='param' style="width:100%")
                .modal-footer
                  button#closeAssign.btn.btn-secondary(type='button' data-dismiss='modal' ) Close
                  button#actionButton.btn.btn-primary(type='button' onclick="taskAssign()") Create
          #kt_modal_6.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Payment status
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                  .row#requestApproval(style="margin-bottom:2rem; display:none")
                    a.kt-notification__item.col-lg-10
                      .kt-todo__item.notifications-item
                        .kt-todo__details(data-toggle='view' style='display:inline-block')
                          .kt-todo__message(style='display:inline-block')
                            span.kt-todo__subject#requestMessage(style='display:inline-block') 
                          .kt-todo__labels
                            span#byBDMamount.kt-todo__label.kt-badge.kt-badge--unified-brand.kt-badge--bold.kt-badge--inline(style="margin-right : 1rem")
                            span#byBDMbudget.kt-todo__label.kt-badge.kt-badge--unified-brand.kt-badge--bold.kt-badge--inline 
                    button.col-lg-2.btn.btn-success(type='button' onclick="paymentstatus(true)") Approve
                  form(class='fileuploadform' enctype='multipart/form-data' role='form')
                  span#taskAssignId(style="display:none")
                  .form-group
                    label.form-control-label(for='softDate') Task Amount:
                    input#taskamount.form-control(type='number')
                  .form-group
                    label.form-control-label(for='softDate') Paid Amount:
                    input#totalpaidamount.form-control(type='number')
                  .form-group
                    label(style="display:block") Currency:
                    select#selectcurrency.form-control.kt-selectpicker(style="width:100%")
                      option(value="AUD") AUD
                      option(value="GBP") GBP
                      option(value="INR") INR
                      option(value="NZD") NZD
                      option(value="USD") USD
                      option(value="CAD") CAD
                  .form-group
                    label Upload screenshot
                    div
                    .custom-file
                      input.custom-file-input(type='file' name='files[]' id='files' multiple)
                      label.custom-file-label(for='customFile') Choose file
                    span.form-text.text-muted Max files size at once is 50MB and max number of files is 5.
                .modal-footer
                  button#closeAssign1.btn.btn-secondary(type='button' data-dismiss='modal' ) Close
                  button#actionButton.btn.btn-primary(type='button' onclick="paymentstatus()") Create
          // end::Modal

    // begin:: Header Mobile
    #kt_header_mobile.kt-header-mobile.kt-header-mobile--fixed
      .kt-header-mobile__logo
        a(href="index.html")
          img(alt="Logo" src="/assets/media/logos/logo-dark.png")
      .kt-header-mobile__toolbar
        button#kt_aside_mobile_toggler.kt-header-mobile__toggler.kt-header-mobile__toggler--left
          span
        button#kt_header_mobile_toggler.kt-header-mobile__toggler
          span
        button#kt_header_mobile_topbar_toggler.kt-header-mobile__topbar-toggler
          i.flaticon-more
    // end:: Header Mobile
    .kt-grid.kt-grid--hor.kt-grid--root
      .kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--ver.kt-page
        include ./partials/sidenav.pug
        #kt_wrapper.kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--hor.kt-wrapper
          // begin:: Header
          include ./partials/topnav.pug
          #kt_content.kt-content.kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--hor
            // begin:: Content Head
            include ./partials/header.pug
            .kt-container.kt-container--fluid.kt-grid__item.kt-grid__item--fluid
              // Begin::Dashboard 3
              // Begin::Row
              .row 
                .col-md-12
                  .kt-portlet.kt-portlet--mobile
                    .kt-portlet__head
                      .kt-portlet__head-label
                        h3.kt-portlet__head-title Get News headings and sources
                    .kt-portlet__body(style="padding-top:0")
                      // begin: Datatable
                      form
                        .card-body
                          .row
                            .col-md-12
                              .form-group
                                label
                                  | Query 
                                  span.text-danger *
                                input.form-control#queryinput(type='text' placeholder='Enter search query')
                          .row
                            .col-md-4
                              .form-group
                                label
                                  | From 
                                  span.text-danger *
                                input.form-control#fromdate(type='date')
                            .col-md-4
                              .form-group
                                label
                                  | To 
                                  span.text-danger *
                                input.form-control#todate(type='date')
                            .col-md-4
                              .form-group
                                label(for='exampleSelect1')
                                  | Sort By 
                                  span.text-danger *
                                select#sort.form-control
                                  option(value="") --Select Sorting--
                                  option(value="relevancy") Relevancy
                                  option(value="popularity") Popularity
                                  option(value="publishedAt") Latest
                        .card-footer
                          button.btn.btn-primary.mr-2(type="button"  onclick="getNews();") Submit
                          button.btn.btn-secondary(type='reset') Cancel
              
              .row#newsheadlines
                
          include ./partials/footer.pug

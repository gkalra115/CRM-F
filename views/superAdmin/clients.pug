                              a#export_print.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-print
                                span.kt-nav__link-text Print
                            li.kt-nav__item
                              a#export_copy.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-copy
                                span.kt-nav__link-text Copy
                            li.kt-nav__item
                              a#export_excel.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-file-excel-o
                                span.kt-nav__link-text Excel
                            li.kt-nav__item
                              a#export_csv.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-file-text-o
                                span.kt-nav__link-text CSV
                            li.kt-nav__item
                              a#export_pdf.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-file-pdf-o
                                span.kt-nav__link-text PDF
                      button.btn.btn-brand.btn-sm(type='button', data-toggle='modal', data-target='#kt_modal_4' onclick="clearForm()")
                          i.la.la-plus
                          |  Add Client
                .kt-portlet__body
                  // begin: Search Form
                  .kt-form.kt-form--label-right.kt-margin-t-20.kt-margin-b-10
                    .row.align-items-center
                      .col-xl-8.order-2.order-xl-1
                        .row.align-items-center
                          .col-md-4.kt-margin-b-20-tablet-and-mobile
                            .kt-input-icon.kt-input-icon--left
                              input#generalSearch.form-control(type='text', placeholder='Search...')
                              span.kt-input-icon__icon.kt-input-icon__icon--left
                                span
                                  i.la.la-search
                        
                #addTable.kt-portlet__body(style="padding-top:0")
                
                  // begin: Datatable
                  table#kt_table_3.table.table-striped-.table-bordered.table-hover.table-checkable
                    thead
                      tr
                        th ID
                        th BDM
                        th Name
                        th Phone
                        th University
                        th Country
                        th Status
                  // end: Datatable

          include ./partials/footer.pug
          // end::Modal
          // begin::Modal
          #kt_modal_4.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Add a new Client
                  button.close(type='button', data-dismiss='modal', aria-label='Close' )
                .modal-body(class="kt-scroll" data-scroll="true" data-height="400")
                  form#createClient
                    .form-group
                      label.form-control-label(for='email') Email:
                      input#email.form-control(type='email' name="email")
                    .form-group
                      label.form-control-label(for='name') Name:
                      input#name.form-control(type='text' name="name")
                    .form-group
                      label.form-control-label(for='phone') Phone:
                      input#phone.form-control(type='tel' name="phone")
                    .form-group
                      label(for='country') Country
                      select#country.form-control(name="country")
                        option(value='Australia') Australia
                        option(value='United Kingdom') United Kingdom
                        option(value='India') India
                        option(value='New Zealand') New Zealand 
                        option(value='United States') United States
                        option(value='Canada') Canada
                    .form-group
                      label.form-control-label(for='university') University:
                      input#university.form-control(type='text' name="university") 
                    #statusInput.form-group(style="display:none;")
                      label(for='status') Status
                      select#status.form-control(name='is_active')
                        option(value='Active') Active
                        option(value='In-Active') In-Active         
                .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal' ) Close
                  button#actionButton.btn.btn-primary(type='button' onclick="createClient()") Create
          // end::Modal
          // begin::Modal
          #kt_modal_3.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editClient', aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#clientEditTitle.modal-title Edit Client
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                .modal-body
                  form#editClient
                    .form-group
                      label.form-control-label(for='email') Email:
                      input#uemail.form-control(type='email' name='email')
                    .form-group
                      label.form-control-label(for='text') Name:
                      input#uname.form-control(type='text' name='name')
                    .form-group
                      label.form-control-label(for='phone') Phone:
                      input#uphone.form-control(type='tel' name='phone')
                    .form-group
                      label(for='country') Country
                      select#ucountry.form-control(name='country')
                        option(value='AU') AU
                        option(value='UK') UK
                        option(value='IN') IN
                        option(value='NZ') NZ
                        option(value='US') US
                        option(value='CN') CN
                    .form-group
                      label.form-control-label(for='university') University:
                      input#uuniversity.form-control(type='text' name='university')
                    .form-group
                      label(for='status') Status
                      select#ustatus.form-control(name='is_active')
                        option(value='Active') Active
                        option(value='In-Active') In-Active
                        
                .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                  button.btn.btn-primary(type='button',id="editButton" onclick='editClient()') Edit
          // end::Modal
          // begin::Modal
          #kt_modal_5.modal.fade(tabindex='-1' role='dialog' aria-labelledby='assignClient' aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Assign Client To
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                  form#clientAssignForm
                  span#employeeAssignId(style="display:none")
                  .form-group
                    label(style="display:block") Select BDM:
                    select#kt_select2_1.form-control.kt-select2(name='param' style="width:100%")
                .modal-footer
                  button#closeAssign.btn.btn-secondary(type='button' data-dismiss='modal' ) Close
                  button#actionButton.btn.btn-primary(type='button' onclick="clientAssign()") Assign
          
          // end::Modal
    // begin::Quick Panel

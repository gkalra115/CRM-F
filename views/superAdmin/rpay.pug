                      | Payments links
                  .kt-portlet__head-toolbar
                    .kt-portlet__head-toolbar-wrapper
                      button#kt_datatable_reload.btn.btn-outline-brand.btn-sm(type='button', style="margin-right:0.5rem;", data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                        i.la.la-refresh
                        |  Reload
                      .dropdown.dropdown-inline
                        button.btn.btn-outline-brand.btn-sm(type='button', style="margin-right:0.5rem;", data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                          i.la.la-download
                          |  Export
                        .dropdown-menu.dropdown-menu-right
                          ul.kt-nav
                            li.kt-nav__section.kt-nav__section--first
                              span.kt-nav__section-text Export Tools
                            li.kt-nav__item
                              a#export_print.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-print
                                span.kt-nav__link-text Print
                            li.kt-nav__item
                              a#export_copy.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-copy
                                span.kt-nav__link-text Copy
                            li.kt-nav__item
                              a#export_excel.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-file-excel-o
                                span.kt-nav__link-text Excel
                            li.kt-nav__item
                              a#export_csv.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-file-text-o
                                span.kt-nav__link-text CSV
                            li.kt-nav__item
                              a#export_pdf.kt-nav__link(href='#')
                                i.kt-nav__link-icon.la.la-file-pdf-o
                                span.kt-nav__link-text PDF
                      .dropdown.dropdown-inline    
                        button.btn.btn-brand.btn-sm(type='button' data-toggle='modal' data-target='#kt_modal_4' style="margin-left:0.5rem" onClick="clearCreateLinkForm()")
                          i.la.la-plus
                          |  Create Link
                #addTable.kt-portlet__body(style="padding-top:0")
                  // begin: Datatable
                  table#kt_table_3.table.table-striped-.table-bordered.table-hover.table-checkable
                    thead
                      tr
                        th ID
                        th Date
                        th Amount
                        th Paid
                        th Status
                        th Link
          include ./partials/footer.pug
          // end::Modal
          // begin::Modal
      #kt_modal_4.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Create new Link
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                  form#createTask
                    .form-group
                      label(for="client") Client
                      select#kt_select2_1.custom-select.form-control(style="width:100%" name="client")
                        option(selected='') Select client
                    .form-group
                      label(style="display:block" for="currency") Currency:
                      select#selectcurrency.form-control.kt-selectpicker(style="width:100%" name="currency")
                        option(value="AUD") AUD
                        option(value="GBP") GBP
                        option(value="INR") INR
                    .form-group
                      label.form-control-label(for='amount') Amount:
                      input#amountinput.form-control(type='number' name="amount")
                  #linkcreated
                    .input-group
                      input.form-control#razorpaylink(type='text')
                      .input-group-append
                        button.btn.btn-secondary(type='button' onclick="myFunctionCopy()") Copy!
                .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal' ) Close
                  button#actionButton.btn.btn-primary(type='button' onclick="createLink()") Create

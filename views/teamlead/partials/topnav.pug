#kt_header.kt-header.kt-grid__item.kt-header--fixed
            style.
              #lblCartCount {
              position: relative;
              }
              #lblCartCount .badge{
              position: absolute;
              top: -1.5rem;
              left: 1rem;
              font-size: 0.8rem;
              padding: 0.5rem;
              }
            // begin:: Header Menu
            //
            #kt_header_menu_wrapper.kt-header-menu-wrapper
          
            // end:: Header Menu
            // begin:: Header Topbar
            .kt-header__topbar
              // begin: Quick panel toggler
              .kt-header__topbar-item.kt-header__topbar-item--quick-panel(data-toggle='kt-tooltip', title='Quick panel', data-placement='right', style='display:none')
                span#kt_quick_panel_toggler_btn.kt-header__topbar-icon
                  svg.kt-svg-icon(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='24px', height='24px', viewbox='0 0 24 24', version='1.1')
                    g(stroke='none', stroke-width='1', fill='none', fill-rule='evenodd')
                      rect(x='0', y='0', width='24', height='24')
                      rect(fill='#000000', x='4', y='4', width='7', height='7', rx='1.5')
                      path(d='M5.5,13 L9.5,13 C10.3284271,13 11,13.6715729 11,14.5 L11,18.5 C11,19.3284271 10.3284271,20 9.5,20 L5.5,20 C4.67157288,20 4,19.3284271 4,18.5 L4,14.5 C4,13.6715729 4.67157288,13 5.5,13 Z M14.5,4 L18.5,4 C19.3284271,4 20,4.67157288 20,5.5 L20,9.5 C20,10.3284271 19.3284271,11 18.5,11 L14.5,11 C13.6715729,11 13,10.3284271 13,9.5 L13,5.5 C13,4.67157288 13.6715729,4 14.5,4 Z M14.5,13 L18.5,13 C19.3284271,13 20,13.6715729 20,14.5 L20,18.5 C20,19.3284271 19.3284271,20 18.5,20 L14.5,20 C13.6715729,20 13,19.3284271 13,18.5 L13,14.5 C13,13.6715729 13.6715729,13 14.5,13 Z', fill='#000000', opacity='0.3')
              // end: Quick panel toggler

              // begin: Notifications
              .kt-header__topbar-item(style="margin-right : 0.5rem;")
                .kt-header__topbar-wrapper
                  a.kt-header__topbar-icon.kt-pulse.kt-pulse--brand.removeNotfication(href="/te/notifications") 
                    span#lblCartCount.label.pulse.pulse-success.mr-10
                      i.far.fa-bell
                      span.badge.badge-primary#notificationsCount
                        | #{notifications}
              // end: Notifications
              .kt-header__topbar-item.kt-header__topbar-item--user
                .kt-header__topbar-wrapper(data-toggle="dropdown" data-offset="0px,0px")
                  .kt-header__topbar-user
                    span.kt-header__topbar-welcome.kt-hidden-mobile Hello,
                    span.kt-header__topbar-username.kt-hidden-mobile Mate
                    span.kt-badge.kt-badge--username.kt-badge--unified-success.kt-badge--lg.kt-badge--rounded.kt-badge--bold #{avatarinitial}
                .dropdown-menu.dropdown-menu-fit.dropdown-menu-right.dropdown-menu-anim.dropdown-menu-top-unround.dropdown-menu-xl
                  // begin: Head
                  .kt-user-card.kt-user-card--skin-dark.kt-notification-item-padding-x(style="background-image: url(/assets/media/misc/bg-1.jpg)")
                    .kt-user-card__avatar
                      img.kt-hidden(alt="Pic" src="/assets/media/users/300_25.jpg")
                      // use below badge element instead the user avatar to display username's first letter(remove kt-hidden class to display it)
                      span.kt-badge.kt-badge--lg.kt-badge--rounded.kt-badge--bold.kt-font-success #{initialletter}
                    .kt-user-card__name #{username}
                  // end: Head
                  // begin: Navigation
                  .kt-notification
                    a.kt-notification__item(href="/te/profile")
                      .kt-notification__item-icon
                        i.flaticon2-calendar-3.kt-font-success
                      .kt-notification__item-details
                        .kt-notification__item-title.kt-font-bold
                          | My Profile
                        .kt-notification__item-time
                          | Account settings and more
                    a.kt-notification__item(href="/te/all")
                      .kt-notification__item-icon
                        i.flaticon2-hourglass.kt-font-brand
                      .kt-notification__item-details
                        .kt-notification__item-title.kt-font-bold
                          | My Tasks
                        .kt-notification__item-time
                          | All task by me
                    .kt-notification__custom.kt-space-between
                      button#kt_login_signin_submit.loginclick.btn.btn-brand.btn-elevate.kt-login__btn-primary Sign Out

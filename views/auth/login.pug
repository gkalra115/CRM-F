    // end::Page Custom Styles
    // begin::Global Theme Styles(used by all pages)
    link(href='/assets/plugins/global/plugins.bundle.css', rel='stylesheet', type='text/css')
    link(href='/assets/css/style.bundle.css', rel='stylesheet', type='text/css')
    // end::Global Theme Styles
    // begin::Layout Skins(used by all pages)
    link(href='/assets/css/skins/header/base/light.css', rel='stylesheet', type='text/css')
    link(href='/assets/css/skins/header/menu/light.css', rel='stylesheet', type='text/css')
    link(href='/assets/css/skins/brand/dark.css', rel='stylesheet', type='text/css')
    link(href='/assets/css/skins/aside/dark.css', rel='stylesheet', type='text/css')
    // end::Layout Skins
    link(rel='shortcut icon', href='rpanel/media/requine.png')
  // end::Head
  // begin::Body
  body.kt-quick-panel--right.kt-demo-panel--right.kt-offcanvas-panel--right.kt-header--fixed.kt-header-mobile--fixed.kt-subheader--enabled.kt-subheader--fixed.kt-subheader--solid.kt-aside--enabled.kt-aside--fixed.kt-page--loading
    // begin:: Page
    .kt-grid.kt-grid--ver.kt-grid--root
      #kt_login.kt-grid.kt-grid--hor.kt-grid--root.kt-login.kt-login--v3.kt-login--signin
        .kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--hor(style='background-image: url(/assets/media/bg/bg-3.jpg);')
          .kt-grid__item.kt-grid__item--fluid.kt-login__wrapper
            .kt-login__container
              //.kt-login__logo
                a(href='#')
                  img(src='rpanel/media/requine.png' style='width:50%')
              .kt-login__signin
                .kt-login__head
                  h3.kt-login__title Sign In To Panel
                form.kt-form(action='')
                  .input-group
                    input.form-control#email1(type='text', placeholder='Email', autocomplete='off', , name="email1")
                  .input-group
                    input.form-control#password1(type='password', placeholder='Password', name="password1")
                  .row.kt-login__extra
                    .col.kt-align-left
                      a(href='javascript:;' onclick='myFunction()') Show password
                    .col.kt-align-right
                      a#kt_login_forgot.kt-login__link(href='javascript:;') Forget Password ?
                  .kt-login__actions
                    button#kt_login_signin_submit.loginclick.btn.btn-brand.btn-elevate.kt-login__btn-primary Sign In
                  .row.kt-login__extra
                    .col.kt-align-center
                      | Not a member 
                      a(href='javascript:;' onclick='myFunction()') Register?
              .kt-login__forgot
                .kt-login__head
                  h3.kt-login__title Forgotten Password ?
                  .kt-login__desc Enter your email to reset your password:
                form.kt-form(action='')
                  .alert.alert-danger.text-white.alert-dismissible.fade(role='alert')
                    |  Invalid Email Address
                    button.close(type='button' data-dismiss='alert' aria-label='Close')
                      span(aria-hidden='true') &times;
                  .input-group
                    input#kt_email.form-control.resentpasswordinput(type='text', placeholder='Email', name='email', autocomplete='off')
                  .kt-login__actions
                    button#kt_login_forgot_submit.btn.btn-brand.btn-elevate.kt-login__btn-primary.reequestmail Request
                    button#kt_login_forgot_cancel.btn.btn-light.btn-elevate.kt-login__btn-secondary Cancel
    // end:: Page
